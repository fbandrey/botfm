  <tr><td>
      <%= admin_menu('users') -%>
  </td><td>
  <div id="admin_content">

<%- if logged_in? && permit?('admin') -%>
  <div style='margin-bottom:30px;' class='system_menu'>
    <%= link_to 'Добавить пользователя', new_admin_user_path -%>
  </div>
<%- end -%>

<%- @users.each do |user| -%>
  <div style='margin-bottom:5px;'>
