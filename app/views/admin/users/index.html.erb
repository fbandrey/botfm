    <%= (link_to(image_tag('/images/delete.png', :style => 'border:0;'), admin_user_path(user), :method => :delete)) if logged_in? && permit?('admin') -%>
  </div>
<%- end -%>

<div style="font-size:14px; margin-top:20px;">
  <span style='color:red; font-weight:bold;'>*</span> - администраторы
</div>

