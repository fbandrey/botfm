<table border="0">
  <tr><td>
    <%= admin_menu('rsses') -%>
  </td><td>

  <div id="admin_content">
<h2>Редактирование RSS-ленты</h2> 
<%= error_messages_for :rss -%>

<div style='float:left; width:400px;'>
  <%- form_for (:rss, :url => admin_rss_path, :html => {:method => 'put'}) do |f| -%>

    <p>Пользователь: <b><%= @rss.user.login -%></b></p>

    <p><label for="rss_description">Описание</label><br/>
      <%= f.text_area :description, :style => 'width:300px; height:150px;' -%></p>

    <p style='margin-top:10px;'><%= submit_tag 'Изменить' -%> <%= link_to('Назад', admin_rsses_path) -%></p>
  <%- end -%>
</div>
</td></tr>
</table>
